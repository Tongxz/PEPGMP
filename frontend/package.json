{
  "name": "pepgmp-frontend",
  "private": true,
  "description": "Frontend workspace for Vue 3 + Vite migration (feature/vue3-vite)",
  "license": "MIT",
  "engines": {
    "node": ">=20.11 <21 || >=22.6 <23",
    "npm": ">=10.5 <11"
  },
  "type": "module",
  "scripts": {
    "prepare": "corepack enable || true",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --open",
    "lint": "eslint --ext .ts,.tsx,.vue src",
    "lint:fix": "eslint --ext .ts,.tsx,.vue src --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx,vue,css,scss,md,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,vue,css,scss,md,json}\"",
    "stylelint": "stylelint \"src/**/*.{css,scss,vue}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss,vue}\" --fix",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@vicons/antd": "^0.13.0",
    "@vicons/ionicons5": "^0.13.0",
    "axios": "^1.12.2",
    "chart.js": "^4.5.0",
    "naive-ui": "^2.43.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.0",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vue-tsc": "^2.0.0"
  },
  "packageManager": "npm@10.9.3"
}